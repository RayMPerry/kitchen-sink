{
    "sameLine": {
        "ifBody": "same",
        "elseBody": "same"
    },
    "whitespace": {
        "bracesConfig": {
            "blockBraces": {
                "openingPolicy": "around",
                "closingPolicy": "around"
            }
        },
        "colonPolicy": "after",
